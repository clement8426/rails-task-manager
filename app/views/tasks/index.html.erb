<div class="container">
  <h1>My tasks</h1>
  <div>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <input type="checkbox" id="scales" name="scales" <% if task.completed %>checked<% end %> />
          <label for="task"><%= link_to task.title, task_path(task) %></label>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %>
          <%= link_to "Delete", task_path(task),
              method: :delete,
              remote: true,
              data: { turbo_confirm: "Are you sure?", turbo_method: :delete },
              class: "btn btn-secondary" %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Add new task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
